</ul>
<table>
<tr>
<th> User Name </th>
<th> Approve?</th>
<th> Confirm?</th>

</tr>
{% for post in posts %}
<tr>
    <td>{{post.Name}}</td>
    <form action="/adminaprove" method="post">
    <input type="hidden" name="name" value={{post.Name}}>
    <td><label for="Yes">Yes</label>
    <input type="radio" name="aprove" value="1">
    <label for="No">No</label>
    <input type="radio" name="aprove" value="0"><br></td>
    <td><input type="submit" class="btn btn-primary" value="Confirm"><br></td></form>
</tr>
{% endfor %}

{% endblock %}